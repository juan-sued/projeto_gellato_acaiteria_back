{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "rootDirs": ["./src"],
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "joi": [
        "node_modules/joi/dist/joi-browser.min"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
